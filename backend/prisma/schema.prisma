generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  password  String
  email     String   @unique
  createdAt DateTime @default(now())

  //references
  // блин я дурак, assignee с двумя s :D
  authoredTasks Task[] @relation("AuthorTasks")
  asignedTasks  Task[] @relation("AsigneeTasks")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime @default(now())
  authorId    Int
  asigneeId   Int

  //references
  author  User @relation("AuthorTasks", fields: [authorId], references: [id], onDelete: Cascade)
  asignee User @relation("AsigneeTasks", fields: [asigneeId], references: [id], onDelete: Cascade)
}
